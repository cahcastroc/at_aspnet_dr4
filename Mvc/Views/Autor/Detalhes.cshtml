@model Domain.ViewModels.AutorViewModel;

@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Erro
    </div>
}

<div>
    <h4>Detalhes do livro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Sobrenome
        </dt>
        <dd class="col-sm-10">
            @Model.Sobrenome
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Data de Nascimento
        </dt>
        <dd class="col-sm-10">
            @Model.DataNascimento.Day.ToString("00")/@Model.DataNascimento.Month.ToString("00")/@Model.DataNascimento.Year.ToString("0000")
        </dd>            
        
        <dt class="col-sm-2">
            Livros
        </dt>
        <dd class="col-sm-10">
            @foreach (var livro in @Model.Livros)
            {
                <ul>
                    @livro.Titulo
                </ul>
            }

    </dl>
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Voltar para listagem completa", "Index")
    </button>
</div>

