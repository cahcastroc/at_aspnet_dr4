@model Domain.ViewModels.LivroViewModel;

@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Erro
    </div>
}

<div>
    <h4>Detalhes da pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Titulo
        </dd>
        <dt class="col-sm-2">
           ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.ISBN
        </dd>
        <dt class="col-sm-2">
            Ano
        </dt>
        <dd class="col-sm-10">
            @Model.Ano.Year.ToString("0000")
        </dd>
        <dt class="col-sm-2">
            Autores
        </dt>
        <dd class="col-sm-10">
            @foreach(var autor in @Model.Autores)
            {
                <ul>
                    @autor.Nome @autor.Sobrenome
                </ul>
            }     

    </dl>
    <button type="button" class="btn btn-outline-primary">
        @Html.ActionLink("Voltar para listagem completa", "Index")
    </button>
</div>

