@model Domain.ViewModels.FuncionarioViewModel


<img src="https://img.freepik.com/vetores-gratis/ilustracao-do-conceito-abstrato-da-pagina-de-login_335657-3875.jpg" />


@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Erro
    </div>
}

<div class="align-content-center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2 class="text-center">Cadastro:</h2>
            <hr />
            <form asp-action="Registro" method="post" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Role, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.Role, new SelectList(new[]
                    {
                    new { Value = "ADM", Text = "Admin" },
                    new { Value = "FUNC", Text = "Funcionário" }                   
                    }, "Value", "Text"), "-- Selecione uma opção --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </div>

                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


